<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
  </head>
  <body>
    {{#userData}}
      <div class="userCard" style="border:1px solid red;margin:10px;padding:10px;">
        <img src={{avatar}} alt={{username}}/>
        <h2>{{name}}</h2>
        {{#job}}
          <p>{{job}}, {{company}}</p>
        {{/job}}
        {{^job}}
          <p class='hire'>Available for hire</p>
        {{/job}}
      </div>
    {{/userData}}
  </body>
</html>
