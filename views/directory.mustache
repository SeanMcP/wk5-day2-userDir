<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link href="https://fonts.googleapis.com/css?family=Heebo:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="/main.css">
  </head>
  <body>
    <div class="container">
      <h1>User Directory</h1>
      {{#userData}}
        <a href="/listing/{{id}}">
          <div class="userCard">
            <img src={{avatar}} alt={{name}}/>
            <h2>{{name}}</h2>
            {{#job}}
            <p>{{job}}, {{company}}</p>
            {{/job}}
            {{^job}}
            <p class='hire'>Available for hire</p>
            {{/job}}
          </div>
        </a>
      {{/userData}}
    </div>
  </body>
</html>
